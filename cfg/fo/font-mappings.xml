<font-mappings>
  <font-table>
    
    <!-- Backwards compatibility aliases -->
    <aliases>
      <alias name="serif">Serif</alias>
    </aliases>
    <aliases>
      <alias name="sans-serif">Sans</alias>
    </aliases>
    <aliases>
      <alias name="monospace">Monospaced</alias>
    </aliases>
    <aliases>
      <alias name="Helvetica">Normal</alias>
    </aliases>
    <aliases>
      <alias name="Courier">Monospaced</alias>
    </aliases>
    <aliases>
    <alias name="Titles">Titles</alias></aliases>

    

	<logical-font name="Sans">
      <physical-font char-set="default">
        <!--DITA for Print-->
        <font-face>Arial, Helvetica, Unicode MS, KaiTi</font-face>
      </physical-font>
      <physical-font char-set="Simplified Chinese">
        <font-face>KaiTi</font-face>
      </physical-font>
      <physical-font char-set="Japanese">
        <font-face>KozMinProVI-Regular</font-face>
      </physical-font>
      <physical-font char-set="Korean">
        <font-face>AdobeMyungjoStd-Medium</font-face>
      </physical-font>
      <physical-font char-set="Symbols">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SubmenuSymbol">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SymbolsSuperscript">
        <!--DITA for Print-->
		<font-face>Arial, Helvetica, Unicode MS</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>
    </logical-font>
    <!--DITA for Print Exercise-->
    <logical-font name="Titles">
      <physical-font char-set="default">
        <font-face>Futura</font-face>
           </physical-font>
     <!-- <physical-font char-set="SymbolsSuperscript">
        <font-face>Futura</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>-->
          </logical-font>

    <logical-font name="Figure Titles">
      <physical-font char-set="default">
        <font-face>Arial, Helvetica, Unicode MS</font-face>
      </physical-font>
    </logical-font>
    
    <logical-font name="Table Titles">
      <physical-font char-set="default">
        <font-face>Arial, Helvetica, Unicode MS</font-face>
      </physical-font>
    </logical-font>

    <logical-font name="Serif">
      <physical-font char-set="default">
        <!--DITA for Print-->
		<font-face>Book Antiqua, Times New Roman, Times</font-face>
      </physical-font>
      <physical-font char-set="Simplified Chinese">
        <font-face>KaiTi</font-face>
      </physical-font>
      <physical-font char-set="Japanese">
        <font-face>KozMinProVI-Regular</font-face>
      </physical-font>
      <physical-font char-set="Korean">
        <font-face>AdobeMyungjoStd-Medium</font-face>
      </physical-font>
      <physical-font char-set="Symbols">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SubmenuSymbol">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SymbolsSuperscript">
        <!--DITA for Print-->
		<font-face>Book Antiqua, Times New Roman, Times</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>
    </logical-font>

    <logical-font name="Monospaced">
      <physical-font char-set="default">
        <font-face>Courier New, Courier</font-face>
      </physical-font>
      <physical-font char-set="Simplified Chinese">
        <font-face>KaiTi</font-face>
      </physical-font>
      <physical-font char-set="Japanese">
        <font-face>KozMinProVI-Regular</font-face>
      </physical-font>
      <physical-font char-set="Korean">
        <font-face>AdobeMyungjoStd-Medium</font-face>
      </physical-font>
      <physical-font char-set="Symbols">
        <font-face>ZapfDingbats</font-face>
      </physical-font>
      <physical-font char-set="SymbolsSuperscript">
        <font-face>Courier New, Courier</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>
        </logical-font>
    
    <logical-font name="Futura">
      <physical-font char-set="default">
        <font-face>Futura</font-face>
      </physical-font>
    </logical-font>    
    <logical-font name="RotisSansSerif">
      <physical-font char-set="default">
        <font-face>RotisSansSerif</font-face>
      </physical-font>
    </logical-font>

    <!--  KLL 2016-09-16 Added Mr Jones (TTF) in place of Neris (OTF) for 2016 rebranding-->
    <logical-font name="Mr Jones">
      <physical-font char-set="default">
        <font-face>Mr Jones</font-face>
      </physical-font>
    </logical-font> 
    <logical-font name="Mr Jones Bold">
      <physical-font char-set="default">
        <font-face>Mr Jones Bold</font-face>
      </physical-font>
    </logical-font> 
    
  </font-table>

</font-mappings>
